<style>
  .cybersecurity-article {
    max-width: 800px;
    margin: 0 auto 4rem;
  }

  .cybersecurity-article h2,
  .cybersecurity-article h3,
  .cybersecurity-article h4 {
    color: var(--primary-color);
    margin: 2rem 0 1rem;
  }

  .cybersecurity-article h4 {
    font-size: 1.2rem;
  }

  .cybersecurity-article p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .quiz-section {
    background: white;
    padding: 2rem;
    border-radius: 8px;
    margin-top: 2rem;
  }

  .quiz-question {
    margin-bottom: 1.5rem;
  }

  .quiz-options {
    display: grid;
    gap: 1rem;
    margin-top: 1rem;
  }

  .quiz-option {
    padding: 1rem;
    border: 1px solid #e2e8f0;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s;
    background: white;
    width: 100%;
    text-align: left;
    font-size: 1rem;
  }

  .quiz-option:hover:not(.correct):not(.incorrect) {
    background-color: #edf2f7;
  }

  .quiz-option.correct {
    background-color: #48bb78;
    color: white;
    border-color: #48bb78;
  }

  .quiz-option.incorrect {
    background-color: #f56565;
    color: white;
    border-color: #f56565;
  }

  .feedback {
    margin-top: 1rem;
    padding: 1rem;
    border-radius: 4px;
    display: none;
  }

  .feedback.show {
    display: block;
    background-color: #f8f9fa;
    border: 1px solid #e2e8f0;
  }

  .hidden {
    display: none;
  }

  #retry-quiz {
    background-color: var(--primary-color);
    color: white;
    padding: 1rem 2rem;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    margin-top: 1rem;
    transition: background-color 0.3s;
  }

  #retry-quiz:hover {
    background-color: var(--secondary-color);
  }
</style>

<script>
  function initializeQuiz() {
    const quizContainer = document.getElementById('quiz-container');
    const retryButton = document.getElementById('retry-quiz');
    let currentQuestion = 1;

    function handleOptionClick(e) {
      if (!e.target.classList.contains('quiz-option')) return;
      
      const options = e.target.parentElement.getElementsByClassName('quiz-option');
      const feedback = e.target.parentElement.nextElementSibling;
      const isCorrect = e.target.hasAttribute('data-correct');
      
      // Disable all options after selection
      Array.from(options).forEach(option => {
        option.disabled = true;
        if (option.hasAttribute('data-correct')) {
          option.classList.add('correct');
        }
      });

      // Mark selected option
      if (isCorrect) {
        e.target.classList.add('correct');
        feedback.textContent = 'Correct!';
      } else {
        e.target.classList.add('incorrect');
        feedback.textContent = 'Incorrect. Try again!';
      }
      feedback.classList.add('show');

      // Show next question if correct
      if (isCorrect && currentQuestion < 5) {
        setTimeout(() => {
          const nextQuestion = document.querySelector(`[data-question="${currentQuestion + 1}"]`);
          if (nextQuestion) {
            nextQuestion.classList.remove('hidden');
            currentQuestion++;
          }
        }, 1000);
      }

      // Show retry button if all questions are answered
      if (currentQuestion === 5 && isCorrect) {
        setTimeout(() => {
          retryButton.classList.remove('hidden');
        }, 1000);
      }
    }

    function resetQuiz() {
      const questions = document.getElementsByClassName('quiz-question');
      Array.from(questions).forEach((question, index) => {
        // Reset options
        const options = question.getElementsByClassName('quiz-option');
        Array.from(options).forEach(option => {
          option.classList.remove('correct', 'incorrect');
          option.disabled = false;
        });

        // Reset feedback
        const feedback = question.querySelector('.feedback');
        feedback.textContent = '';
        feedback.classList.remove('show');

        // Hide all questions except first
        if (index > 0) {
          question.classList.add('hidden');
        }
      });

      // Hide retry button
      retryButton.classList.add('hidden');
      currentQuestion = 1;
    }

    quizContainer.addEventListener('click', handleOptionClick);
    retryButton.addEventListener('click', resetQuiz);
  }

  // Initialize quiz when the page loads
  document.addEventListener('DOMContentLoaded', initializeQuiz);
</script>